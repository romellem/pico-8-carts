pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
t=0

function _init()
	ship = {sp=1,x=60,y=60}
end

function _update()
	--@todo this will eventually overflow at 32768
	t+=1
	
	if (t%6 < 3) then
		ship.sp = 1
	else
		ship.sp = 2
	end
	
	if (btn(⬅️)) then ship.x-=1 end
	if (btn(➡️)) then ship.x+=1 end
	if (btn(⬆️)) then ship.y-=1 end
	if (btn(⬇️)) then ship.y+=1 end
end

function _draw()
	cls()
	spr(ship.sp, ship.x, ship.y)
end
