--variables

function _init()
	player={
		x=100,
		y=112,
		dx=0,
		dy=0,
		jump_speed=10,
		falling=false,
	}
	
	max_y=112
	gravity=0.6
end


-->8
--update and draw

function _update()
	player_update()
end

function _draw()
	cls()
	map(0,0)
	spr(1, player.x, player.y)
end
-->8
--player

function player_update()
	if 
		btn(⬆️) and
		not player.falling
	then
	 player.dy = -1 * player.jump_speed
		player.falling = true
	end
	if player.falling then
		player.dy += gravity
	end

	player.x += player.dx
	player.y += player.dy
	
	--limit player to map
 if player.y > max_y then
 	player.y = max_y
 	player.falling = false
 end
end
