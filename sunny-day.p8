--variables

function _init()
	player={
		x=50,
		y=50,
		dx=0,
		dy=0,
	}
	
	acc=0.2 --acceleration
end


-->8
--update and draw

function _update()
	player_update()
end

function _draw()
	cls()
	spr(1, player.x, player.y)
end
-->8
--player

function player_update()
	if btn(⬆️) then
		player.dy-=acc
	elseif btn(⬇️) then
		player.dy+=acc
	end
	
	if btn(⬅️) then
		player.dx-=acc
	elseif btn(➡️) then
		player.dx+=acc
	end
	
	player.x+=player.dx
	player.y+=player.dy
end
